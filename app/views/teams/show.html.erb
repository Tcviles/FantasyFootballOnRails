<label class="title"><%= @team.user.email%></label><br>
<label style="font-size:150%;"><%= @team.name %></label>

<table>
  <thead>
    <th>Name</th>
    <th>NFL</th>
    <th>Position</th>
    <th>ADP</th>
  </thead>
  <tbody>
    <% @team.players.each do |player|%>
    <tr>
      <td><%= player.name%></td>
      <td><%= player.nfl_team%></td>
      <td><%= player.position.name%></td>
      <td><%= player.adp%></td>
    </tr>
    <%end%>
  </tbody>
</table>

<% if @team.user == current_user %>
  <%= link_to 'Delete Team', @team, method: :delete, data: { confirm: 'Are you sure??' } %>
<%end%>
